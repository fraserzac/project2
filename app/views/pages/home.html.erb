<div class="title">
  <h2>Lighting Calculator</h2>
</div>

  <div class="ajax">
    <h3>Select Light</h3>
    <div class="buttons">


  <%= form_tag '/calculate' do %>

            <% label_tag :Number_lights %>
            <%= number_field_tag :Number_lights, nil, :placeholder => 'numberoflights', :value => 25 %>
        
            <% label_tag :Hours %>
            <%= number_field_tag :Hours, nil, :placeholder => 'Hours', :value => 10 %>

        <% submit_tag "Calculate" %>

    <% end %>

    <!-- <p><input id="lights" type="number" placeholder="Number of lights" value=10></p> -->
    <!-- <p><input id="hours" type="number" placeholder="Hours" value=10></p> -->
    
      <select class="selectpicker halogen">
        <option>Please select...</option>


      </select>
      <br>
  
        <select class="selectpicker led">
        <option>Please select...</option>
        <!--<option id="led01">240V 4W Candle LED</option>
