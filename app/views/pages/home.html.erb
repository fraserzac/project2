    <div class="result">

      <p class="lifespan">
        Lifespan: 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

      <p class="costperlight">
        Cost Per Light: 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

      <p class="powerperlight">
        Power Per Light: 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

