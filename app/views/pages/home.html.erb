<div class="title">
  <h2>Lighting Calculator</h2>
</div>

  <div class="ajax">
    <h3>Select Light</h3>
    <div class="buttons">

  <%= form_tag '/calculate' do %>
            <% label_tag :Number_lights %>
            <%= number_field_tag :Number_lights, nil, :placeholder => 'numberoflights', :value => 25 %>
        
            <% label_tag :Hours %>
            <%= number_field_tag :Hours, nil, :placeholder => 'Hours', :value => 10 %>
      
        <% submit_tag "Calculate" %>

    <% end %>

    <!-- <p><input id="lights" type="number" placeholder="Number of lights" value=10></p> -->
    <!-- <p><input id="hours" type="number" placeholder="Hours" value=10></p> -->
    
      <select class="selectpicker halogen">
        <option>Please select current light</option>
      </select>
      <br>
  
        <select class="selectpicker led">
        <option>Please select new light</option>
        
      </select>

    <div class="result">

      <p class="lifespan">
        Lifespan (hours): 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

      <p class="costperlight">
        Cost Per Light ($): 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

      <p class="powerperlight">
        Power Per Light (watts): 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

      <p class="yearlyconsumption">
        Yearly Consumption (KWH): 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>

      <p class="yearlyemissions">
        Yearly Emissions (C02): 
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>
      
      <p class="yearlypowercost">
        <span>Yearly Power Cost ($): </span>
        <span class="halogen_render"></span>
        <span class="leds_render"></span>
        <span class="difference"></span>
      </p>
      </div>
  
      </div>

    </div>
    
  </div>

  <div class="D3">
    <h3>Compare Halogen and LED</h3>
    <canvas id="lights" width="550" height="500"></canvas>
  </div>


